<mvc:View
    controllerName="nttdata.com.i18nproyect.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
<Shell id="_IDGenShell1" >
    <App id="_IDGenApp1" class="myAppDemoWT">
        <pages>
            <Page id="_IDGenPage1" title="{i18n>homePageTitle}">
                <content>
                <Panel id="_IDGenPanel1"
                    headerText="{i18n>helloPanelTitle}"
                    class="sapUiResponsiveMargin"
					width="auto">
                    <content>
                    
                        <Button id="_IDGenButton1"
                            text="{i18n>showHelloButtonText}"
                            press=".onShowHello"
                            class="myCustomButton"/>
                        <Input id="_IDGenInput1"
                            value="{/recipient/name}"
                            description="Hello {/recipient/lastName}"
                            valueLiveUpdate="true"
                            width="60%"/>
                        <Text id="_IDGenText1" 
                            text="{i18n>pruebaTXT}"
                            class="sapUiResponsiveMargin sapThemeHighlight-asColor myCustomText myTxt"/>

                    </content>
                </Panel>
                </content>
            </Page>
        </pages>
    </App>

</Shell>
 </mvc:View>